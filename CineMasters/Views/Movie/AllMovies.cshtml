@model IEnumerable<CineMasters.Models.Domain.Movie>

@{
    ViewData["Title"] = "AllMovies";
}

<h1>AllMovies</h1>

<p>
    <a asp-action="CreateMovie">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditMovie", new { id = item.Id }) |
                @Html.ActionLink("Delete", "DeleteMovie", new { id = item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
