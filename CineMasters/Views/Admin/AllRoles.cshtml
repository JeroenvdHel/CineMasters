@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "AllRoles";
}

<div class="bg-primary m-1 p-1"><h4>Gebruikersrollen</h4></div>

<div class="text-danger" asp-validation-summary="ModelOnly"></div>

<table class="table table-sm table-bordered table-bordered">
    <tr>
        <th>ID</th>
        <th>Naam</th>
        <th>Gebruikers</th>
        <th></th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr><td colspan="4">Geen gebruikersrollen aanwezig</td></tr>
    }
    else
    {
        foreach (var role in Model)
        {
        <tr>
            <td>@role.Id</td>
            <td>@role.Name</td>
            <td identity-role="@role.Id"></td>
            <td>
                <form asp-action="DeleteRole" asp-route-id="@role.Id" method="post">
                    <a class="btn btn-sm btn-primary" asp-action="EditRole" asp-route-id="@role.Id">Wijzigen</a>
                    <input type="submit" value="Verwijderen" class="btn btn-sm btn-danger"/>
                </form>
            </td>
        </tr>
        }
    }
</table>
<a asp-action="CreateRole" class="btn btn-primary">Nieuw</a>