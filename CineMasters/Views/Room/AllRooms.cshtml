@model IEnumerable<Room>

@{
    ViewData["Title"] = "AllRooms";
}

<h1>AllRooms</h1>

<p>
    <a asp-action="CreateRoom">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rows)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SeatsPerRow)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rows)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SeatsPerRow)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditRoom", new { id = item.Id }) |
                @Html.ActionLink("Delete", "DeleteRoom", new { id = item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
